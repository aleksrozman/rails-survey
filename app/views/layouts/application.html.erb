<!DOCTYPE html>
<html>
	<head>
		<title><%= yield :title %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div class="container">
			<div class="headerdiv">
				<%= yield :header %>
			</div>
			<div class="bodydiv">
				<%= yield %>
			</div>
			<div class="footerdiv">
				<%= yield :footer %>
			</div>
		</div>
	</body>
</html>
